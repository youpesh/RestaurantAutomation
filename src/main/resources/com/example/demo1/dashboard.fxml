<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo1.DashboardController">

    <!-- Sidebar (Left) -->
    <left>
        <VBox spacing="10" style="-fx-background-color: #333; -fx-padding: 10px;">
            <Button text="Dashboard" fx:id="btnDashboard" onAction="#showDashboard"
                    style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Button text="Reports" fx:id="btnReports" onAction="#showReports"
                    style="-fx-background-color: #555; -fx-text-fill: white;"/>
            <Button text="Settings" fx:id="btnSettings" onAction="#showSettings"
                    style="-fx-background-color: #555; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <!-- Main Content (Center) -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>

</BorderPane>
